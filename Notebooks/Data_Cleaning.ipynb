import pandas as pd

# Load your data
df = pd.read_excel('Data/raw/Online Retail.xlsx')

# Explore dataset structure
print(df.shape)
print(df.head())
print(df.info())

# Count missing CustomerID entries
missing_customer_ids = df['CustomerID'].isna().sum()
print("Missing CustomerIDs:", missing_customer_ids)

# Count transactions with negative quantities (returns)
negative_qty = (df['Quantity'] < 0).sum()
print("Negative Quantity (returns):", negative_qty)

# Count duplicate rows
duplicate_rows = df.duplicated().sum()
print("Duplicate rows:", duplicate_rows)
#Remove transactions with missing CustomerID
df_clean = df.dropna(subset=['CustomerID'])
#remove duplicate rows
df_clean = df_clean.drop_duplicates()
#flag and keep returns for analysis
df_clean['IsReturn'] = df_clean['Quantity'] < 0
#as major business is in UK
core_countries = ['United Kingdom']
df_clean = df_clean[df_clean['Country'].isin(core_countries)]
df_clean.to_csv('Data/processed/online_retail_cleaned.csv', index=False)
